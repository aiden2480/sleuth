{% extends "_base.jinja" %}
{% block title %}Login{% endblock title %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="/static/css/login.css"/>
    <script type="text/javascript" src="/static/js/login.js"></script>
{% endblock head %}

{% block body %}
    <div class="center-div">
        <img src="/static/images/sleuth.png" alt="Sleuth icon">
        <div style="width: 100%; height: 10%" id="error-div">
            <p id="incorrect-creds">Your login credentials are incorrect</p>
        </div>
        <form action="/login" method="POST">
            <p>
                Username:
                <input name="user" type="text" placeholder="Username" id="user-input-field" required>
            </p>
            <p>
                Password:
                <input name="pass" type="password" placeholder="Password" id="pass-input-field" required>
            </p>
            <button onclick="window.location.href='/'">Cancel</button>
            <button type="submit">Log in</button>
        </form>
    </div>
    <script>check_params();detect_error();</script>
{% endblock body %}
